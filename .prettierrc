{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "es5",
	"bracketSpacing": true,
	"svelteBracketNewLine": true,
	"bracketSameLine": false,
	"singleAttributePerLine": true,
	"tabWidth": 2,
	"semi": true,
	"printWidth": 140,
	"arrowParens": "always",
	"htmlWhitespaceSensitivity": "css",
	"proseWrap": "preserve",
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	]
}
